<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#E46A18" />
            <gradient android:angle="-90" android:startColor="#F48F36" android:endColor="#F49836"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#F47836" />
            <solid android:color="#F48836"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#F48F36" />
            <gradient android:angle="-90" android:startColor="#F49836" android:endColor="#F47236" />
        </shape>
    </item>
</selector>